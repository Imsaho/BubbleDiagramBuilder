{% extends 'base.html.twig' %}

{% block page_header %}Budynek{% endblock page_header %}
{% block small_header %}dodaj{% endblock small_header %}

{% block body %}

    <form action="{{ path('building_new') }}" method="POST" novalidate="novalidate">

        {{ form_row(form.name, {'label': 'Nazwa'}) }}
        {{ form_row(form.NBAFactor, {'label': 'Współczynnik NBA'}) }}
        {{ form_row(form.coordinates, {'label': 'Lokalizacja /współrzędne'}) }}
        {{ form_row(form.description, {'label': 'Opis'}) }}
        {{ form_row(form.team) }}

        {{ form_rest(form) }}

        <input type="submit" value="Utwórz" class="btn btn-primary btn-lg btn-block" />

    </form>

    <br/>

    <a href="{{ path('building_index') }}" class="btn btn-lg">Powrót do listy</a>

{% endblock %}
