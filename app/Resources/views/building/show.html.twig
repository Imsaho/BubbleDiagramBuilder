{% extends 'base.html.twig' %}

{% block page_header %}Budynek{% endblock page_header %}
{% block small_header %}szczegóły{% endblock small_header %}

{% block body %}

    <table>
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ building.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ building.name }}</td>
            </tr>
            <tr>
                <th>GBA</th>
                <td>{{ building.GBA }}</td>
            </tr>
            <tr>
                <th>NBA</th>
                <td>{{ building.NBA }}</td>
            </tr>
            <tr>
                <th>współczynnik NBA</th>
                <td>{{ building.NBAFactor }}</td>
            </tr>
            <tr>
                <th>Współrzędne</th>
                <td>{{ building.coordinates }}</td>
            </tr>
            <tr>
                <th>Opis</th>
                <td>{{ building.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('building_index') }}">Powrót do listy</a>
        </li>
        <li>
            <a href="{{ path('building_edit', { 'id': building.id }) }}">Edytuj</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Usuń">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
