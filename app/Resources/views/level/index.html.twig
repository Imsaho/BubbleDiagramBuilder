{% extends 'base.html.twig' %}

{% block page_header %}Kondygnacje{% endblock page_header %}
{% block small_header %}wszystkie{% endblock small_header %}

{% block menu_item %}

    <li>
        <a href="{{ path('level_index') }}"><i class="fa fa-fw  fa-list"></i> Kondygnacje</a>
    </li>
    <li>
        <a href="{{ path('zone_index') }}"><i class="fa fa-fw  fa-circle"></i> Strefy</a>
    </li>
    <li>
        <a href="{{ path('room_index') }}"><i class="fa fa-fw  fa-square-o"></i> Pomieszczenia</a>
    </li>

{% endblock menu_item %}

{% block body %}
    {#<h1>Levels list</h1>#}

    <div class="col-lg-12">
        <div class="table-responsive">
            <table class ="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>

                        <th>NBA [m<sup>2</sup>]</th>
                        <th>Populacja</th>
                        <th>Pomieszczenia</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for level in levels %}
                        <tr>
                            <td><a href="{{ path('level_show', { 'id': level.id }) }}">{{ level.id }}</a></td>
                            <td>{{ level.name }}</td>
                            <td>{{ level.calculateLevelNBA() }}</td>
                            <td>{{ level.calculatePeopleOnLevel() }}</td>

                            <td>
                                <ul>
                                    <li><a href="{{ path('all_rooms_on_level', { 'id': level.id }) }}">poka≈º wszystkie</a></li>
                                </ul>
                            </td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('level_show', { 'id': level.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('level_edit', { 'id': level.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('level_new') }}">Create a new level</a>
        </li>
    </ul>
{% endblock %}
