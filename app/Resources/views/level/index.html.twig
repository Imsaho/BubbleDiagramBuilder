{% extends 'base.html.twig' %}

{% block page_header %}Kondygnacja{% endblock page_header %}
{% block small_header %}wszystkie{% endblock small_header %}

{% block body %}
    {#<h1>Levels list</h1>#}

    <div class="col-lg-12">
        <div class="table-responsive">
            <table class ="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Color</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for level in levels %}
                        <tr>
                            <td><a href="{{ path('level_show', { 'id': level.id }) }}">{{ level.id }}</a></td>
                            <td>{{ level.name }}</td>
                            <td>{{ level.description }}</td>
                            <td>{{ level.color }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('level_show', { 'id': level.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('level_edit', { 'id': level.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('level_new') }}">Create a new level</a>
        </li>
    </ul>
{% endblock %}
