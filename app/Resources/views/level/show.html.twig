{% extends 'base.html.twig' %}

{% block page_header %}Kondygnacja{% endblock page_header %}
{% block small_header %}szczegóły{% endblock small_header %}

{% block body %}
    {#    <h1>Level</h1>#}

    <div class="col-lg-6">
        <div class="table-responsive">
            <table class ="table table-hover">
                <tbody>
                    <tr>
                        
                        <th bgcolor="{{ level.color }}" colspan="2" style="text-align:center">Kondygnacja {{ level.name }}</th>
                    </tr>

                    <tr>
                        <th>Description</th>
                        <td>{{ level.description }}</td>
                    </tr>
                    <tr>
                        <th>Level NBA Total</th>
                        <td>{{ level.calculateLevelNBA() }} m<sup>2</sup></td>
                    </tr>
                    
                    <tr>
                        <th>Populacja</th>
                        <td>{{ level.calculatePeopleOnLevel() }}</td>
                    </tr>

                    <tr>
                        <th>Pomieszczenia</th>
                        <td>
                            <ul>
                                {% for room in level.rooms %}
                                    <li>{{ room.number }} | {{ room.name }} | {{ room.area }} m<sup>2</sup></li>
                                    {% endfor %}
                            </ul>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-lg-12">
        <ul>
            <li>
                <a href="{{ path('level_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('level_edit', { 'id': level.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
