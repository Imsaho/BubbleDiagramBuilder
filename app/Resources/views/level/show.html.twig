{% extends 'base.html.twig' %}

{% block page_header %}Kondygnacja{% endblock page_header %}
{% block small_header %}szczegóły{% endblock small_header %}

{% block body %}
    {#    <h1>Level</h1>#}

    <div class="col-lg-6">
        <div class="table-responsive">
            <table class ="table table-hover">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ level.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ level.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ level.description }}</td>
                    </tr>
                    <tr>
                        <th>Color</th>
                        <td>{{ level.color }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-lg-12">
        <ul>
            <li>
                <a href="{{ path('level_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('level_edit', { 'id': level.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
