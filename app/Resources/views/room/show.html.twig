{% extends 'base.html.twig' %}


{% block page_header %}Pomieszczenie{% endblock page_header %}
{% block small_header %}szczegóły{% endblock small_header %}

{% block body %}
    <div class="col-lg-6">
        <div class="table-responsive">
            <table class ="table table-hover">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ room.id }}</td>
                    </tr>
                    <tr>
                        <th>Number</th>
                        <td>{{ room.number }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ room.name }}</td>
                    </tr>
                    <tr>
                        <th>Area</th>
                        <td>{{ room.area }}</td>
                    </tr>
                    <tr>
                        <th>Minheight</th>
                        <td>{{ room.minHeight }}</td>
                    </tr>
                    <tr>
                        <th>Requirements</th>
                        <td>{{ room.requirements }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ room.description }}</td>
                    </tr>
                    <tr>
                        <th>Maxpersonamount</th>
                        <td>{{ room.maxPersonAmount }}</td>
                    </tr>
                    <tr>
                        <th>Accesscontrol</th>
                        <td>{% if room.accessControl %}Yes{% else %}No{% endif %}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <br/>
    <div class="col-lg-12">
        <ul>
            <li>
                <a href="{{ path('room_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('room_edit', { 'id': room.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
