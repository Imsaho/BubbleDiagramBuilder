{% extends 'base.html.twig' %}

{% block page_header %}Team{% endblock page_header %}
{% block small_header %}edytuj{% endblock small_header %}

{% block body %}

    <form action="{{ path('team_new') }}" method="POST" novalidate="novalidate">

        {{ form_row(edit_form.name, {'label': 'Nazwa'}) }}
        {{ form_row(edit_form.users, {'label': 'Użytkownicy'}) }}

        {{ form_rest(edit_form) }}

        <input type="submit" value="Zapisz zmiany" class="btn btn-primary btn-lg btn-block" />

    </form>

    <a href="{{ path('team_index') }}" class="btn btn-lg">Powrót do listy</a>

{% endblock %}
