{% extends 'base.html.twig' %}


{% block page_header %}Team{% endblock page_header %}
{% block small_header %}wszystkie{% endblock small_header %}

{% block body %}

    {% if message is defined %}
        <div class="alert alert-danger">
            <strong>{{ message }}</strong>
        </div>
    {% endif %}

    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Nazwa</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for team in teams %}
                    <tr>
                        <td>{{ team.name }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('team_show', { 'id': team.id }) }}">szczegóły</a>
                                </li>
                                <li>
                                    <a href="{{ path('team_edit', { 'id': team.id }) }}">edytuj</a>
                                </li>
                                <li>
                                    <a class="askdelete" href="{{ path('team_delete', {'id': team.id}) }}">usuń</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('team_new') }}">Dodaj nowy zespół</a>

{% endblock %}
