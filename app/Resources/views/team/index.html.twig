{% extends 'base.html.twig' %}


{% block page_header %}Team{% endblock page_header %}
{% block small_header %}wszystkie{% endblock small_header %}

{% block body %}

    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for team in teams %}
                    <tr>
                        <td><a href="{{ path('team_show', { 'id': team.id }) }}">{{ team.id }}</a></td>
                        <td>{{ team.name }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('team_show', { 'id': team.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('team_edit', { 'id': team.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>


    <a href="{{ path('team_new') }}">Create a new team</a>

{% endblock %}
