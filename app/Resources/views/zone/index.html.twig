{% extends 'base.html.twig' %}

{% block page_header %}Strefy{% endblock page_header %}
{% block small_header %}wszystkie{% endblock small_header %}

{% block menu_item %}

    <li>
        <a href="{{ path('level_index') }}"><i class="fa fa-fw  fa-list"></i> Kondygnacje</a>
    </li>
    <li>
        <a href="{{ path('zone_index') }}"><i class="fa fa-fw  fa-circle"></i> Strefy</a>
    </li>
    <li>
        <a href="{{ path('room_index') }}"><i class="fa fa-fw  fa-square-o"></i> Pomieszczenia</a>
    </li>

{% endblock menu_item %}

{% block body %}
    {#    <h1>Zones list</h1>#}

    <div class="col-lg-12">
        <div class="table-responsive">
            <table class ="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nazwa</th>

                        <th># kolor</th>
                        <th>NBA [m<sup>2</sup>]</th>
                        <th>Populacja</th>
                        <th>Pomieszczenia</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for zone in zones %}
                        <tr>
                            <td><a href="{{ path('zone_show', { 'id': zone.id }) }}">{{ zone.id }}</a></td>
                            <td>{{ zone.name }}</td>

                            <td bgcolor="{{ zone.color }}"></td>
                            <td>{{ zone.calculateZoneNBA() }} m<sup>2</sup></td>
                            <td>{{ zone.calculatePeopleInZone() }}</td>
                            <td>
                                <ul>
                                    <li><a href="{{ path('all_rooms_in_zone', { 'id': zone.id }) }}">pokaż wszystkie</a></li>
                                </ul>
                            </td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('zone_show', { 'id': zone.id }) }}">szczegóły</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('zone_edit', { 'id': zone.id }) }}">edytuj</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('zone_new') }}">Dodaj nową strefę</a>
        </li>
    </ul>
{% endblock %}
