{% extends 'base.html.twig' %}

{% block page_header %}Strefa{% endblock page_header %}
{% block small_header %}szczegóły{% endblock small_header %}

{% block body %}
    {#    <h1>Zone</h1>#}

    <div class="col-lg-6">
        <div class="table-responsive">
            <table class ="table table-hover">
                <tbody>
                    <tr>
                        <th bgcolor="{{ zone.color }}"></th>
                        <td bgcolor="{{ zone.color }}">{{ zone.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ zone.description }}</td>
                    </tr>
                    <tr>
                        <th>zone NBA</th>
                        <td>{{ zone.calculateZoneNBA() }} m<sup>2</sup></td>
                    </tr>
                    <tr>
                        <th>Pomieszczenia</th>
                        <td>
                                                            {% for room in zone.rooms %}
                                    <li>{{ room.number }} | {{ room.name }} | {{ room.area }} m<sup>2</sup></li>
                                    {% endfor %}
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>

    <div class="col-lg-12">
        <ul>
            <li>
                <a href="{{ path('zone_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('zone_edit', { 'id': zone.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
