{% extends '/room/index.html.twig' %}


{% block page_header %}Pomieszczenia{% endblock page_header %}
{% block small_header %}wg kondygnacji{% endblock small_header %}

{% block body %}

    <div class="table-responsive">
        <table class ="table table-hover table-striped">
            <thead>
                <tr>

                    <th>Numer</th>
                    <th>Strefa</th>
                    <th>Nazwa</th>
                    <th>Powierzchnia</th>
                    
                    
                    
                    <th>Liczba osób</th>
                    <th>Kontrola dostępu</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for level in levels %}
                    <tr><th colspan="7">Kondygnacja {{ level.name }}</th>
                   
                    </tr>
                    {% for room in level.getRooms() %}
                        <tr>
                            
                            <td>{{ room.number }}</td>
                            <td bgcolor="{{ room.zone.color }}"></td>
                            <td>{{ room.name }}</td>
                            <td>{{ room.area }} m<sup>2</sup></td>
                            
                            
                           
                            <td>{{ room.maxPersonAmount }}</td>
                            <td>{% if room.accessControl %}Tak{% else %}Nie{% endif %}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('room_show', { 'id': room.id }) }}">szczegóły</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('room_edit', { 'id': room.id }) }}">edytuj</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                        {% endfor %}
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <ul>
            <li>
                <a href="{{ path('room_new') }}">Dodaj pomieszczenie</a>
            </li>
        </ul>
        {% endblock %}